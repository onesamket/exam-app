generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model Question {
  id       Int      @id @default(autoincrement())
  question String
  options  Option[]
  category String
}

// enum Category {
//   IT
//   SWE
//   CS
//   ISC
//   IS
// }

model User {
  id         String @id @default(cuid())
  name       String
  username   String
  password   String
  collage    String
  department String
  role       String @default("USER")
}

model Option {
  id         String    @id @default(cuid())
  label      String
  value      String
  isCorrect  Boolean
  Question   Question? @relation(fields: [questionId], references: [id])
  questionId Int?
}
